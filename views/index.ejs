<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.0.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
   <% function loader(fol){ %>
    <div class="folder">
      <div class="item">
        <i class="ri-folder-3-line"></i>
        <h3><%= fol.name %></h3>
      </div>
      <div class="items">
      <% fol.contents.forEach(item=>{ %>
        <% if(item.contents){ %>
          <% loader(item) %>
          <% } else{ %>
            <a href="/openFile/<%= item.path %>">
              <div class="item">
                <i class="ri-file-3-line"></i>
                <p><%= item.name %></p>
              </div>
            </a>
            <% } %>
        <% }) %>
      </div>
    </div>
  <% } %>
  <% loader(folder) %>
  <script>
    var data = JSON.parse(`<%- JSON.stringify(folder) %>`)
    console.log(data)
  </script>
<script src="/javascripts/script.js"></script>
</body>
</html>
